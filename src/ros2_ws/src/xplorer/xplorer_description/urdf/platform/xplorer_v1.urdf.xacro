    <xacro:property name="rover_position_z" value="0" />

    <xacro:property name="body_position_x" value="0" />
    <xacro:property name="body_position_y" value="0" />
    <xacro:property name="body_position_z" value="0" />

    <xacro:property name="rplidar_position_x" value="0" />
    <xacro:property name="rplidar_position_y" value="0.25" />
    <xacro:property name="rplidar_position_z" value="-0.25" />

    <xacro:property name="imu_position_x" value="0.05" />
    <xacro:property name="imu_position_y" value="0.0" />
    <xacro:property name="imu_position_z" value="0.06" />
    

