    <!-- Import general properties -->

    <xacro:include filename="$(find xplorer_description)/urdf/macros.xacro" />

    <!-- Import rover -->

    <xacro:include filename="$(find xplorer_description)/urdf/components/rover/sdr_pcs1500.urdf.xacro" />

    <!-- Import body -->

    <!-- <xacro:include filename="$(find xplorer_description)/urdf/components/rover/body/main_frame.urdf.xacro" /> -->

    <!-- Import payload -->


    <!-- Import sensors -->

    <xacro:include filename="$(find xplorer_description)/urdf/components/sensors/rplidar_s2.urdf.xacro" />
    <xacro:include filename="$(find xplorer_description)/urdf/components/sensors/um7_imu.urdf.xacro" />

    <!-- Import simulation data for gazebo -->

    <xacro:include filename="$(find pico_description)/urdf/robots/pico_assembly.gazebo.xacro" />
  
  
    <!-- ***************** -->
    <!--    parameters     -->
    <!-- ***************** -->

    <xacro:property name="rover_position_x" value="0" />
